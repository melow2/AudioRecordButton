<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lyt_chronomter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/audio_record_button"
        app:layout_constraintLeft_toLeftOf="@id/audio_record_button"
        app:layout_constraintRight_toRightOf="@id/audio_record_button"
        android:layout_marginBottom="10dp">
        <Chronometer
            android:id="@+id/test_chronomter"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_event"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.khs.audiorecorder.AudioRecordButton
        android:id="@+id/audio_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"></com.khs.audiorecorder.AudioRecordButton>

